<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <!-- Pull Monta order status for orders that already have a Monta ref -->
    <record id="ir_cron_monta_pull_status" model="ir.cron">
      <field name="name">Monta: Pull Order Status</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="state">code</field>
      <field name="code">model._cron_monta_pull_status()</field>
      <field name="interval_number">10</field>
      <field name="interval_type">minutes</field>
      <field name="numbercall">-1</field>
      <field name="active">True</field>
    </record>

    <!-- Push sales orders to Monta that are flagged as pending -->
    <record id="ir_cron_monta_push_pending" model="ir.cron">
      <field name="name">Monta: Push Pending Orders</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="state">code</field>
      <field name="code">model._cron_monta_push_pending()</field>
      <field name="interval_number">5</field>
      <field name="interval_type">minutes</field>
      <field name="numbercall">-1</field>
      <field name="active">True</field>
    </record>

    <!-- Optional: nightly product/inbound sync (disabled by default) -->
    <record id="ir_cron_monta_sync_products_inbound" model="ir.cron">
      <field name="name">Monta: Sync Products / Inbound</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="state">code</field>
      <field name="code">model._cron_monta_sync_products_inbound()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="numbercall">-1</field>
      <field name="active">False</field>
    </record>

  </data>
</odoo>
