
<odoo>
    <record id="view_order_form_monta" model="ir.ui.view">
        <field name="name">sale.order.form.monta</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='order_lines']" position="after">
                <group string="Monta">
                    <field name="monta_order_id" readonly="1"/>
                    <field name="monta_status" readonly="1"/>
                    <field name="monta_reference" readonly="1"/>
                    <field name="monta_delivery_date" readonly="1"/>
                    <field name="monta_tracking_url" readonly="1"/>
                    <field name="monta_webshop_order_id" readonly="1"/>
                    <field name="monta_remote_order_id" readonly="1"/>
                    <button name="action_push_to_monta" type="object" string="Push to Monta" class="oe_highlight"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
